source ~/.vim/vim-config/plug.vim

syntax on
set number
set ruler
set cursorline
set showcmd

filetype plugin indent on 
set tabstop=4
set shiftwidth=4
set expandtab
        
"set expandtab
set noerrorbells
set visualbell
set scrolloff=8
set nohlsearch
set incsearch
set smartcase

set ttyfast
"vim line wrap without bracking a word
set mouse=a
set shortmess+=c

"BACKUP AND UNDO ---------------------------------------------
set backup
set backupdir=~/.vim/.backup//
set backupcopy=yes
"Meaningful backup name, ex: filename@2015-04-05.14:59
au BufWritePre * let &bex = '@' . strftime("%F.%H:%M")
set undofile
set undodir=~/.vim/.undo//
set noswapfile
